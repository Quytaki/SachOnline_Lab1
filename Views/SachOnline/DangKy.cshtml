@model dynamic
@{
    ViewBag.Title = "Đăng ký thành viên";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    <style type="text/css" >
    h4 {
        color: red;
        text-align: center;
    }

    h2 {
        text-align: center;
    }

    table {
        margin: 0 auto;
        border-collapse: collapse;
        width: 50%;
    }

    td {
        padding: 10px;
        text-align: right;
        height: 40px;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    input[type="submit"],
    input[type="reset"] {
        padding: 8px 16px;
        background-color: #007BFF;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 160px;
    }

        input[type="submit"]:hover,
        input[type="reset"]:hover {
            background-color: #0056b3;
        }

    .error-message {
        color: red;
    }
</style>

</style>

<h2>ĐĂNG KÝ THÀNH VIÊN</h2>

<!-- Hiển thị thông báo lỗi chung hoặc thành công -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
else if (ViewBag.ThongBao != null)
{
    <div class="alert alert-danger">@ViewBag.ThongBao</div>
}

@using (Html.BeginForm("DangKy", "SachOnline", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table align="center">
        <tr>
            <td>Họ tên:</td>
            <td>@Html.TextBox("HoTen", ViewBag.HoTen as string) <span class="error-message">@ViewData["err1"]</span></td>
        </tr>
        <tr>
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN", ViewBag.TenDN as string) <span class="error-message">@ViewData["err2"]</span></td>
        </tr>
        <tr>
            <td>Mật khẩu:</td>
            <td>@Html.Password("MatKhau") <span class="error-message">@ViewData["err3"]</span></td>
        </tr>
        <tr>
            <td>Mật khẩu nhập lại:</td>
            <td>@Html.Password("MatKhauNL") <span class="error-message">@ViewData["err4"]</span></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>@Html.TextBox("Email", ViewBag.Email as string) <span class="error-message">@ViewData["err5"]</span></td>
        </tr>
        <tr>
            <td>Điện thoại:</td>
            <td>@Html.TextBox("DienThoai", ViewBag.DienThoai as string) <span class="error-message">@ViewData["err6"]</span></td>
        </tr>
        <tr>
            <td>Ngày Sinh:</td>
            <td><input type="date" name="NgaySinh" value="@(ViewBag.NgaySinh as string)" /></td>
        </tr>
        <tr>
            <td>Địa chỉ:</td>
            <td><input type="text" name="DiaChi" value="@(ViewBag.DiaChi as string)" /></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
                <input type="reset" value="Xóa Thông Tin" />
            </td>
        </tr>
    </table>
}
