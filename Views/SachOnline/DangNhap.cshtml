@model dynamic
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">
    input[type="button"] {
        display: inline-block;
        text-align: center;
        padding: 8px 16px;
        background-color: #28a745; /* Màu xanh lá */
        color: white;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        width: 160px;
        transition: background-color 0.3s ease;
        margin: auto;
    }

    input[type="button"]:hover {
        background-color: #218838;
    }

    h4 {
        color: red;
        text-align: center;
    }

    h2 {
        text-align: center;
    }

    table {
        margin: 0 auto;
        border-collapse: collapse;
        width: 50%;
    }

    td {
        padding: 10px;
        text-align: right;
        height: 40px;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    input[type="submit"],
    input[type="reset"] {
        padding: 8px 16px;
        background-color: #007BFF;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 160px;
    }

        input[type="submit"]:hover,
        input[type="reset"]:hover {
            background-color: #0056b3;
        }

    .error-message {
        color: red;
    }
</style>

<h4>@ViewBag.ThongBao</h4>
<h2>ĐĂNG NHẬP</h2>
<table align="center">
    @using (Html.BeginForm())
    {
        <tr>
            <td>Tên đăng nhập: </td>
            <td>
                @Html.TextBox("TenDN")
                <span class="error-message">@ViewData["Err1"]</span>
            </td>
        </tr>
        <tr>
            <td>Mật khẩu: </td>
            <td>
                @Html.Password("MatKhau")
                <span class="error-message">@ViewBag.Err2</span>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
                <a href="@Url.Action("DangKy", "SachOnline")">
                    <input type="button" value="Đăng ký" class="btn-register" />
                </a>

            </td>

        </tr>
    }
</table>

